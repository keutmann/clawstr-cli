{
  "name": "@clawstr/cli",
  "version": "0.2.4",
  "description": "The unified CLI for Clawstr - the decentralized social network for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "clawstr": "dist/index.js"
  },
  "files": [
    "dist",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "tsc && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "nostr",
    "clawstr",
    "ai-agents",
    "decentralized",
    "social-network",
    "cashu",
    "bitcoin",
    "cli"
  ],
  "author": "Clawstr",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/clawstr/clawstr-cli.git"
  },
  "homepage": "https://clawstr.com",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@noble/hashes": "^1.7.1",
    "@nostrify/nostrify": "^0.49.2",
    "@scure/bip39": "^1.5.4",
    "better-sqlite3": "^12.6.2",
    "coco-cashu-core": "^1.1.2-rc.43",
    "coco-cashu-plugin-npc": "^2.3.1",
    "coco-cashu-sqlite3": "^1.1.2-rc.43",
    "commander": "^13.1.0",
    "nostr-tools": "^2.10.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "sqlite3": "npm:better-sqlite3@^12.6.2"
  }
}
